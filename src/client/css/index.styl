@require './basic'
html, body
  width 100%
  height 100%
  padding 0
  margin 0

#container
#container .ant-spin-container
#container .ant-spin-nested-loading
#app
  padding 0
  margin 0
  border none
  width 100%
  height 100%

iframe
  border none
  height calc(100% - 36px)
  width 100%

.rc-tip
  padding 0 5px
  margin 0
  margin-top -5px
  height 28px
  line-height 14px
  font-size 12px
  a
    margin-left 4px

.rc-auth-wrap
  position fixed
  z-index 1
  left 0
  bottom 0
  width 100%
  height 100%
  background #fff

.rc-hide-to-side
  height 0
  overflow hidden

.animate
  transition all 0.5s

.rc-login
  position absolute
  width 80%
  top 40%
  left 50%
  margin-top -15px
  margin-left -40%
.rc-call-note-form
  position absolute
  bottom 0
  left 0
  width 100%
  background #fff
  border-top 1px solid #eee
  opacity .90
.rc-show-note-form
  position absolute
  bottom 2px
  left 2px
.rc-hide-note-form
  position absolute
  bottom 12px
  left 5px